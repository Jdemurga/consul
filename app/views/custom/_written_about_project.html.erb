<p id="project_phase">
  <strong>
    <%= t("admin.budget_investments.show.project_phase") %>:
  </strong>
  <% if investment.project_phase.present? %>
      <%= investment.project_phase %>
  <% else %>
      <%= t("admin.budget_investments.show.undefined") %>
  <% end %>
</p>

<p id="project_content">
  <strong>
    <%= t("admin.budget_investments.show.project_content") %>:
  </strong>
  <blockquote>
    <div class="">
      <% if investment.project_content.present? %>
          <%= investment.project_content.html_safe %>
      <% else %>
          <%= t("admin.budget_investments.show.undefined") %>
      <% end %>
    </div>
  </blockquote>
</p>

<p id="project_content">
  <strong>
    <%= t("admin.budget_investments.show.project_gallery") %>:
  </strong>
  <div class="row small-up-4 medium-up-4">
    <%- investment.attachments.each do |attachment| %>

          <div class="card column">
              <%= link_to attachment.file.url(:thumb), target: 'blank', title: attachment.title do %>
                <% if attachment.document? %>
                    <div class="card-section gallery-item text-center" style="height: 200px; padding-top: 80px; background-color: #e9e9e9;">
                      <i class="icon-document icon" style="font-size: 200%;"></i><br>PDF
                    </div>
                <% else %>
                  <div class="card-section gallery-item" style="background-image: url(<%= attachment.file_url %>); height: 200px;">

                  </div>
                <% end %>
              <% end %>
              <div class="card-section">
                <p class="text-muted">
                  <small>
                    <%= attachment.title %>
                  </small>
                </p>
              </div>
          </div>
    <% end %>
  </div>
</p>


