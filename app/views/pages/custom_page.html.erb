<% provide :title do %><%= @custom_page.title %><% end %>

<div class="row margin-top">

  <div class="small-12 medium-9 column">
    <h1><%= @custom_page.title %></h1>
    <h2><%= @custom_page.subtitle %></h2>

    <%= raw @custom_page.content %>

    <% if @custom_page.attachments.any? %>
      <%= render 'custom/attachments/attachments', attachments: @custom_page.attachments %>
    <% end %>
  </div>

  <div class="small-12 medium-3 column">
    <% unless @custom_page.process_url.blank? %>
      <%= link_to('Ir al proceso', @custom_page.process_url, class: 'button expanded primary') %>
    <% end %>
    <%= render '/shared/print' if @custom_page.print_content_flag %>
  </div>
</div>
